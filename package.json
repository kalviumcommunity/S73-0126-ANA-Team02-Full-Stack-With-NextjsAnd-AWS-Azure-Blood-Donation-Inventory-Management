{
  "name": "blood-donation-inventory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prepare": "husky install",
    "build": "next build",
    "build:dev": "cross-env NODE_ENV=development NEXT_PUBLIC_API_URL=http://localhost:3000/api next build",
    "build:staging": "cross-env NODE_ENV=production NEXT_PUBLIC_API_URL=https://staging.example.com/api next build",
    "build:prod": "cross-env NODE_ENV=production NEXT_PUBLIC_API_URL=https://api.example.com next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "db:setup": "npm run prisma:generate && npm run prisma:push && npm run prisma:seed",
    "db:reset": "prisma migrate reset --force",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:validate": "prisma validate",
    "prisma:format": "prisma format",
    "test:db": "tsx scripts/test-db-connection.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "next": "14.2.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.6",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "2.8.8",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
